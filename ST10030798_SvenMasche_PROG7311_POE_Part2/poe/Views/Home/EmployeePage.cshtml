@model poe.Models.ProfileModel

@{
  ViewData["Title"] = "Profile";
  var Employee = Model.Employee; // Assuming your model is ProfileModel with an Employee property
}
       <style>
  

   .error-label {
 color: red;
 font-weight: bold;
     margin-bottom: 10px; 
   }
 </style>

<div class="container profile-container">
  <div class="row">
    <div class="col-md-4">
      <div class="profile-header">
        <img src="path-to-profile-image.jpg" alt="Profile Image" class="profile-image" />
        <div class="user-info">
          <div class="name">Name: @Employee.FullName</div>
          <div class="username">Username: @Employee.userName</div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="product-panel">
        <h3>Create New User</h3>
        <form method="post" action="/Home/EmployeePage" enctype="multipart/form-data">
          <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="farmerUserName" class="form-control" placeholder="Enter username" required />
          </div>
          <div class="form-group">
            <label for="fullName">Full Name:</label>
            <input type="text" id="fullName" name="farmerName" class="form-control" placeholder="Enter full name" required />
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="farmerPassword" class="form-control" placeholder="Enter password" required />
          </div>
         
          <button type="submit" class="btn btn-primary">Create User</button>
        </form>
                         @if (Model.error)
{
  <div class="error-label" id="errorMessage">@Model.errorMessage</div>
}
      </div>
    </div>
  </div>
</div>